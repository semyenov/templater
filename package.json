{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@sozdev/templater",
  "type": "module",
  "version": "0.0.9",
  "packageManager": "yarn@4.0.1",
  "description": "Templater CLI",
  "author": "Alexander Semyenov <semyenov@hotmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/semyenov/templater#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/semyenov/templater.git"
  },
  "bugs": "https://github.com/semyenov/templater/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": {
    "tpl": "bin/tpl.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "dev": "esno src/index.ts",
    "typecheck": "tsc --noEmit",
    "build": "cross-env NODE_OPTIONS=\"--no-warnings\" rollup --configPlugin json --configPlugin esbuild --config rollup.config.ts",
    "start": "cross-env NODE_OPTIONS=\"--no-warnings --experimental-modules --experimental-import-meta-resolve\" node dist/esm/index.mjs",
    "schema": "typescript-json-schema --out schema.json --skipLibCheck src/lib/config.ts Config",
    "release": "yarn npm publish",
    "lint": "eslint --config eslint.config.js",
    "clean": "yarn exec rm -rf dist"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "change-case": "^5.1.2",
    "consola": "^3.2.3",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "lodash.template": "^4.5.0",
    "picocolors": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.1.1",
    "@antfu/eslint-config-ts": "^0.43.1",
    "@antfu/utils": "^0.7.6",
    "@eslint/eslintrc": "^2.1.3",
    "@rollup/plugin-alias": "^5.0.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@sozdev/eslint-config": "^0.0.11",
    "@types/eslint": "^8.44.7",
    "@types/eslint__eslintrc": "^2",
    "@types/esm": "^3.2.2",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash.template": "^4.5.3",
    "@types/node": "^20.9.0",
    "@types/rollup-plugin-peer-deps-external": "^2.2.4",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@typescript-eslint/utils": "^6.10.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.5",
    "eslint": "^8.53.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-antfu": "^1.0.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^49.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "eslint-plugin-vue": "^9.18.1",
    "eslint-plugin-yml": "^1.10.0",
    "esno": "^4.0.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.1.0",
    "rollup": "^4.4.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "simple-git-hooks": "^2.9.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "typescript-json-schema": "0.62.0",
    "vue-eslint-parser": "^9.3.2",
    "yaml-eslint-parser": "^1.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,yaml,yml,json,md,mdc,vue}": "yarn lint --fix --"
  }
}
